
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Define una funci贸n para verificar si un usuario ha iniciado sesi贸n.
    function isSignedIn() {
      return request.auth != null;
    }

    // Otorga acceso total de lectura, escritura, actualizaci贸n y borrado
    // a todos los documentos para cualquier usuario que haya iniciado sesi贸n.
    match /{document=**} {
      allow read, create, update, delete: if isSignedIn();
    }
  }
}
