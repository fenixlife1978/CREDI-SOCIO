
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Define una función para verificar si un usuario ha iniciado sesión.
    function isSignedIn() {
      return request.auth != null;
    }

    // Otorga acceso total de lectura y escritura a todos los documentos
    // para cualquier usuario que haya iniciado sesión.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
